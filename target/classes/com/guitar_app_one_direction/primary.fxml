<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="login_pane" prefHeight="900" prefWidth="400" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guitar_app_one_direction.PrimaryController">
   <children>
      <Label fx:id="MelodexTxt" layoutX="108.0" layoutY="144.0" text="Melodex" textFill="WHITE">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="50.0" />
         </font>
      </Label>
      <Button fx:id="loginBtn" layoutX="110.0" layoutY="447.0" mnemonicParsing="false" onAction="#btnLoginClicked" onMouseClicked="#btnLoginClicked" prefHeight="48.0" prefWidth="180.0" text="Login" />
      <Button fx:id="createAccountBtn" layoutX="110.0" layoutY="516.0" mnemonicParsing="false" onAction="#btnCreateAccountClicked" onMouseClicked="#btnCreateAccountClicked" prefHeight="42.0" prefWidth="180.0" text="Sign Up" />
      <TextField fx:id="txt_username" layoutX="47.0" layoutY="291.0" prefHeight="58.0" prefWidth="306.0" promptText="Username">
         <font>
            <Font size="20.0" />
         </font></TextField>
      <TextField fx:id="txt_password" layoutX="47.0" layoutY="361.0" prefHeight="58.0" prefWidth="306.0" promptText="Password">
         <font>
            <Font size="20.0" />
         </font></TextField>
      <Label fx:id="lbl_error" layoutX="212.0" layoutY="235.0" prefHeight="16.0" prefWidth="170.0" />
      <Button fx:id="forgotPasswordBtn" layoutX="135.0" layoutY="854.0" mnemonicParsing="false" onAction="#goToSecurity" text="Forgot Password?" />
   </children>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</AnchorPane>
