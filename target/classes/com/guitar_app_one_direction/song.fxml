<VBox prefHeight="800" prefWidth="400" style="-fx-background-color: linear-gradient(to bottom, #1E4E53, #BF532C);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guitar_app_one_direction.SongController">
    <!-- Completion Status -->
    <Label fx:id="statusLabel" alignment="TOP_LEFT" style="-fx-background-color: #D95032; -fx-text-fill: white; -fx-padding: 5 15; -fx-background-radius: 20; -fx-translate-x: 45; -fx-font-style: bold; -fx-font-size: 18; -fx-translate-y: 20;" text="â“§ Not Complete" />

