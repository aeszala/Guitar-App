<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800" prefWidth="400" style="-fx-background-color: linear-gradient(to bottom, #1E4E53, #BF532C);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guitar_app_one_direction.MySongsController">
    
    <!-- Top navigation bar -->
    <top>
        <HBox style="-fx-background-color: transparent; -fx-padding: 10;" />
    </top>

    <!-- Main content -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <!-- Title -->
            <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;" text="My Songs" />

            <!-- ListView for dynamic song loading -->
            <ListView fx:id="songListView" style="-fx-background-insets: 0; -fx-background-color: transparent;" />
        </VBox>
    </center>

</BorderPane>
