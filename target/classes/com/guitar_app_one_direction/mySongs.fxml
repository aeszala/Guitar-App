<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800" prefWidth="400" style="-fx-background-color: linear-gradient(to bottom, #1E4E53, #BF532C);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guitar_app_one_direction.MySongsController">

    <!-- Main content -->
    <center>
        <VBox prefHeight="805.0" prefWidth="400.0" spacing="15" style="-fx-padding: 20;">
            <!-- Title -->
            <Label style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: white;" text="My Songs" />

            <!-- ListView for dynamic song loading -->
            <ListView fx:id="songListView" prefHeight="684.0" prefWidth="360.0" style="-fx-background-insets: 0; -fx-background-color: transparent;" />
        </VBox>
    </center>

    <!-- Bottom navigation bar -->
    <bottom>
        <HBox spacing="50" alignment="center" style="-fx-padding: 10;">
            <!-- Back button -->
            <Button fx:id="backButton" text="←" style="-fx-font-size: 24; -fx-background-color: transparent; -fx-text-fill: white;" />

            <!-- Home button -->
            <Button fx:id="homeButton" text="🏠" style="-fx-font-size: 24; -fx-background-color: transparent; -fx-text-fill: white;" />
        </HBox>
    </bottom>

</BorderPane>
