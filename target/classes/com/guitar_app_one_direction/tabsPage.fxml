<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="800" prefWidth="400" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #1E4E53, #BF532C);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guitar_app_one_direction.TabsPageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label fx:id="songTitle" style="-fx-translate-x: -112;" text="Song Title" textFill="WHITE">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>
      <ScrollPane fx:id="tabsScrollPane" prefHeight="448.0" prefWidth="360.0" style="-fx-background-color: #203434; -fx-background-radius: 30;">
        <content>
          <AnchorPane fx:id="tabsContentPane" minHeight="0.0" minWidth="0.0" prefHeight="450.0" prefWidth="344.0" style="-fx-background-color: #203434; -fx-background-radius: 30 0 0 30;" />
        </content>
      </ScrollPane>
      <Button fx:id="saveToTxtBtn" mnemonicParsing="false" onAction="#saveTabsToTxt" style="-fx-background-color: #296B73; -fx-background-radius: 60; -fx-cursor: hand;" text="Save to txt" textFill="WHITE">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </children>
</VBox>