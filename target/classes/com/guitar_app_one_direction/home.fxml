<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" prefHeight="900" prefWidth="400" spacing="20" style="-fx-background-color: #f5f5f5; -fx-padding: 40;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guitar_app_one_direction.HomeController">
     <ImageView fx:id="profilePicture" fitHeight="200.0" fitWidth="200.0" onMouseClicked="#goToProfile" style="-fx-cursor: hand; -fx-border-radius: 25; -fx-border-color: #ccc;" />
      
    
    <HBox alignment="CENTER_RIGHT" spacing="20" />
    <Label fx:id="welcomeLabel" styleClass="welcome-text" text="Welcome!">
      <font>
         <Font name="Arial Nova Bold" size="36.0" />
      </font></Label>
     <Button onAction="#goToSearch" prefHeight="92.0" prefWidth="249.0" style="-fx-font-size: 16px; -fx-min-width: 200px; -fx-min-height: 40px;" text="Find a Song" textFill="WHITE">
      <font>
         <Font size="28.0" />
      </font>
   </Button>
     
        <Button onAction="#goToCreateSong" prefHeight="99.0" prefWidth="249.0" style="-fx-font-size: 16px; -fx-min-width: 200px; -fx-min-height: 40px;" text="Create a Song" textFill="WHITE">
      <font>
         <Font name="Arial Nova" size="28.0" />
      </font>
   </Button>
</VBox>
