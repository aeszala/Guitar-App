<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guitar_app_one_direction.HomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="lbl_welcome" text="Welcome!" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Label text="My Songs:" style="-fx-font-weight: bold;" />
    <ListView fx:id="list_mySongs" prefHeight="100.0" maxWidth="400.0"/>

    <Label text="Favorite Songs:" style="-fx-font-weight: bold;" />
    <ListView fx:id="list_favoriteSongs" prefHeight="100.0" maxWidth="400.0"/>

    <Label text="Completed Songs:" style="-fx-font-weight: bold;" />
    <ListView fx:id="list_completedSongs" prefHeight="100.0" maxWidth="400.0"/>

    <HBox spacing="10">
        <Button text="Switch to Secondary View" fx:id="primaryButton" onAction="#switchToSecondary"/>
        <Button text="Logout" onAction="#logout" />
    </HBox>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</VBox>
