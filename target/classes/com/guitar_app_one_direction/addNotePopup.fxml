<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<DialogPane fx:id="dialogPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guitar_app_one_direction.addNotePopupController">
    <content>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Add New Note" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Note Type:"/>
                <ComboBox fx:id="noteTypeCombo" promptText="Select note type"/>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Duration:"/>
                <ComboBox fx:id="durationCombo" promptText="Select duration"/>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Fret:"/>
                <TextField fx:id="fretField" promptText="Enter fret (0-24)"/>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="String:"/>
                <ComboBox fx:id="stringCombo" promptText="Select string (1-6)"/>
            </HBox>
        </VBox>
    </content>
    
    <buttonTypes>
        <ButtonType text="Add" buttonData="OK_DONE"/>
        <ButtonType text="Cancel" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>