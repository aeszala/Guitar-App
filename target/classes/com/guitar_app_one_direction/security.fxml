<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainLayout" prefHeight="900" prefWidth="400" style="-fx-background-color: linear-gradient(to bottom, #1E4E53, #BF532C);" stylesheets="@template.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.guitar_app_one_direction.TemplateController">
   <top>
         
            <!-- Security Question Display -->
         <VBox prefHeight="739.0" prefWidth="400.0" spacing="5" style="-fx-background-color: transparent; -fx-padding: 15; -fx-border-color: transparent; -fx-translate-x: 10; -fx-translate-y: 150;" BorderPane.alignment="CENTER">
             <Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Account Recovery:">
            <font>
               <Font size="28.0" />
            </font>
         </Label>
             <Label style="-fx-text-fill: white;" text="Security Question">
            <font>
               <Font name="System Bold" size="28.0" />
            </font>
         </Label>
             <Label alignment="TOP_LEFT" prefHeight="40.0" prefWidth="338.0" style="-fx-text-fill: white; -fx-translate-y: 20;" text="Sample Question">
            <font>
               <Font size="28.0" />
            </font>
         </Label>
         <TextField fx:id="securityAnswerField" maxWidth="350.0" prefHeight="25.0" prefWidth="345.0" promptText="Answer" style="-fx-max-width: 345; -fx-pref-height: 30; -fx-min-height: 50; -fx-background-radius: 0; -fx-translate-y: 70;">
            <font>
               <Font size="20.0" />
            </font>
         </TextField>
            
               <!-- Done Button with Background Color Matching -->
            <Button fx:id="doneButton" onAction="#handleSubmit" prefHeight="56.0" prefWidth="202.0" style="-fx-padding: 8 25; -fx-background-color: #296B73; -fx-text-fill: white; -fx-background-radius: 30; -fx-translate-y: 465; -fx-translate-x: 75;" text="Done">
            <font>
               <Font size="28.0" />
            </font>
         </Button>
         </VBox>
   </top>
</BorderPane>
