   <children>
      <Label fx:id="MelodexTxt" layoutX="108.0" layoutY="137.0" text="Melodex" textFill="WHITE">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="50.0" />
         </font>
      </Label>
      <Button fx:id="loginBtn" layoutX="109.0" layoutY="440.0" mnemonicParsing="false" onAction="#btnLoginClicked" prefHeight="48.0" prefWidth="180.0" text="Login" />
      <Button fx:id="createAccountBtn" layoutX="111.0" layoutY="508.0" mnemonicParsing="false" onAction="#btnCreateAccountClicked" onMouseClicked="#btnCreateAccountClicked" prefHeight="42.0" prefWidth="180.0" text="Sign Up" />
      <TextField fx:id="txt_username" layoutX="46.0" layoutY="261.0" prefHeight="58.0" prefWidth="306.0" promptText="Username" style="-fx-background-radius: 0; -fx-border-color: white;">
