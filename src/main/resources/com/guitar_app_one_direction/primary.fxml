<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="login_pane"
   xmlns="http://javafx.com/javafx/23.0.1"
   xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="com.guitar_app_one_direction.PrimaryController"
   prefWidth="400" 
   prefHeight="900">
   <children>
      <Label layoutX="23.0" layoutY="14.0" text="Login">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label layoutX="84.0" layoutY="71.0" text="Username:" />
      <Label layoutX="86.0" layoutY="116.0" text="Password:" />
      <Button layoutX="107.0" layoutY="145.0" mnemonicParsing="false" onAction="#btnLoginClicked" onMouseClicked="#btnLoginClicked" prefHeight="24.0" prefWidth="173.0" text="Login" />
      <Button layoutX="107.0" layoutY="178.0" mnemonicParsing="false" onAction="#btnCreateAccountClicked" onMouseClicked="#btnCreateAccountClicked" prefHeight="24.0" prefWidth="173.0" text="Create Account" />
      <TextField fx:id="txt_username" layoutX="148.0" layoutY="67.0" />
      <TextField fx:id="txt_password" layoutX="148.0" layoutY="112.0" />
      <Label fx:id="lbl_error" layoutX="212.0" layoutY="235.0" prefHeight="16.0" prefWidth="170.0" />
      <Button layoutX="138.0" layoutY="211.0" mnemonicParsing="false" onAction="#goToSecurity" text="Forgot Password?" />
   </children>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</AnchorPane>
