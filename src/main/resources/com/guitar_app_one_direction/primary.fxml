            <Font size="20.0" />
         </font></TextField>
      <TextField fx:id="txt_password" layoutX="46.0" layoutY="338.0" prefHeight="58.0" prefWidth="306.0" promptText="Password" style="-fx-border-radius: 0; -fx-border-color: white;">
         <font>
            <Font size="20.0" />
         </font></TextField>
      <Label fx:id="lbl_error" layoutX="212.0" layoutY="235.0" prefHeight="16.0" prefWidth="170.0" />
      <Button fx:id="forgotPasswordBtn" layoutX="136.0" layoutY="854.0" mnemonicParsing="false" onAction="#goToSecurity" text="Forgot Password?" />
      <ImageView fitHeight="151.0" fitWidth="329.0" layoutX="35.0" layoutY="602.0" style="-fx-rotate: -15;">
         <image>
            <Image url="@../images/guitar.png" />
         </image>
      </ImageView>
   </children>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</AnchorPane>
