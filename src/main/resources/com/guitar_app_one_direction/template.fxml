<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="your.package.name.TemplateController">
    <!-- Top navigation bar -->
    <top>
        <HBox style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
            <Button text="Back" fx:id="backButton" onAction="#handleBackButton" />
            <Button text="Home" fx:id="homeButton" onAction="#handleHomeButton" style="-fx-margin-left: 10;"/>
        </HBox>
    </top>
    
    <!-- Content container -->
    <center>
        <StackPane fx:id="contentPane" />
    </center>
</BorderPane>