               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sound Length:">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Text>
                  <ComboBox prefWidth="140.0" style="-fx-background-color: #296B73; -fx-background-radius: 30; -fx-pref-height: 40; -fx-translate-y: -5; -fx-translate-x: 33;" />
